<jxwpfToolkit:BaseWindow x:Class="TestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:jxwpfToolkit="clr-namespace:JXWPFToolkit;assembly=JXWPFToolkit"
        xmlns:notificationPanel="clr-namespace:JXWPFToolkit.Controls.NotificationPanel;assembly=JXWPFToolkit"
        Title="Sample usage" Height="500" Width="600">

	<Grid Background="White">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Button Grid.Row="0" Content="Input Values Window" Click="InputValuesWindowClick"/>

		<notificationPanel:NotificationPanel Grid.Row="2" x:Name="NotificationPanel"/>

		<StackPanel Grid.Row="3" Orientation="Horizontal">
			<Button Content="Add Card" Click="OnAddCardClick"/>
			<Button Content="Add Temporary Card" Click="OnAddTemporaryCardClick"/>
		</StackPanel>

	</Grid>
</jxwpfToolkit:BaseWindow>
